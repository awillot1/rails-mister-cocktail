<div class="row">
  <div class="col-xs-12">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "Back to all cocktails", root_path %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <h3>Recipe</h3>
    <table class="table table-bordered">
      <tbody>
        <thead>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Action</th>
        </thead>
        <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.description %></td>
          <td><%= dose.ingredient.name %></td>
          <td>
          <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
           <i class="fa fa-trash destroy_dose"></i>
        <% end %>
        </td>
        </tr>
      </tbody>
    </table>
     <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
     <p><%= link_to "Back to List", cocktails_path %></p>
  </div>
</div>
